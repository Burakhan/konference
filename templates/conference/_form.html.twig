{{ form_start(form) }}
<div class="card">
    <div class="card-body">
        <div class="col-md-12">
            <div class="mb-3">
                Konferansı Düzenleyen Kurum
                {{ form_widget(form.institution, {'attr': {'class': 'form-select selectized'}}) }}
            </div>

            <div class="mb-3">
                Konferans Başlığı
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                Konferans Açıklaması
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                <label class="form-label">Konferans Şekli</label>
                <div>
                    {{ form_widget(form.conferenceType, {'attr': {'class': ''}}) }}
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Başlangıç Tarihi ve Saati</label>
                <div class="input-icon">
                    {{ form_widget(form.startDate, {'attr': {'class': 'form-control start_date'} }) }}
                    <span class="input-icon-addon"><svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z"/>
                                <rect x="4" y="5" width="16" height="16" rx="2" />
                                <line x1="16" y1="3" x2="16" y2="7" />
                                <line x1="8" y1="3" x2="8" y2="7" />
                                <line x1="4" y1="11" x2="20" y2="11" />
                                <line x1="11" y1="15" x2="12" y2="15" />
                                <line x1="12" y1="15" x2="12" y2="18" />
                              </svg>
                            </span>
                </div>

                <div>


                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Bitiş Tarihi ve Saati</label>
                <div class="input-icon">
                    {{ form_widget(form.endDate, {'attr': {'class': 'form-control end_date'} }) }}
                    <span class="input-icon-addon"><svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z"/>
                                <rect x="4" y="5" width="16" height="16" rx="2" />
                                <line x1="16" y1="3" x2="16" y2="7" />
                                <line x1="8" y1="3" x2="8" y2="7" />
                                <line x1="4" y1="11" x2="20" y2="11" />
                                <line x1="11" y1="15" x2="12" y2="15" />
                                <line x1="12" y1="15" x2="12" y2="18" />
                              </svg>
                            </span>
                </div>

                <div>


                </div>
            </div>
        </div>
    </div>
    <div class="card-footer text-right">
        <div class="d-flex">
            <button type="submit" class="btn btn-primary ml-auto">{{ button_label|default('Kaydet') }}</button>
        </div>
    </div>
</div>
{{ form_end(form) }}
