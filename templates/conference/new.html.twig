{% extends 'public.base.html.twig' %}
{% block title %} Konferanslarım {% endblock %}

{% block body %}

    <div class="container-xl">
        <!-- Page title -->

        <div class="row">
            <div class="col-3">
                {% include '_common/sidebar.menu.html.twig' %}
            </div>
            <div class="col-9">
                <div class="page-header">
                    <div class="row">
                        <div class="col-auto">
                            <h2 class="page-title">
                                Yeni Konferans Oluştur
                            </h2>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="col-md-12">
                            <div class="mb-3">
                                Konferansı Düzenleyen Kurum
                                {{ form_widget(form.institution, {'attr': {'class': 'form-select selectized'}}) }}
                            </div>

                            <div class="mb-3">
                                Konferans Başlığı
                                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="mb-3">
                                Konferans Açıklaması
                                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Konferans Şekli</label>
                                <div>
                                    {{ form_widget(form.conference_type, {'attr': {'class': ''}}) }}

                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script>
$(document).ready(function () {
    $('.selectized').selectize({});
});
</script>
{% endblock %}


