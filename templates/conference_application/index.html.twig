<!DOCTYPE html>

<title>ConferenceApplication index</title>

{% block body %}
    <h1>ConferenceApplication index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Summary</th>
                <th>Description</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for conference_application in conference_applications %}
            <tr>
                <td>{{ conference_application.id }}</td>
                <td>{{ conference_application.summary }}</td>
                <td>{{ conference_application.description }}</td>
                <td>{{ conference_application.status }}</td>
                <td>
                    <a href="{{ path('conference_application_show', {'id': conference_application.id}) }}">show</a>
                    <a href="{{ path('conference_application_edit', {'id': conference_application.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
